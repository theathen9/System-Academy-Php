RewriteEngine On

# =======================
# Dashboard shortcut
# =======================
RewriteRule ^admin/dashboard/?$ admin/dashboard.php [L,END]

# =======================
# Admin routing
# /admin/xxx → admin/xxx.php
# =======================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^admin/([^/]+)/?$ admin/$1.php [L,END]

# =======================
# Admin subfolders
# /admin/institute/employees → admin/institute/employees.php
# =======================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^admin/(.+)/([^/]+)/?$ admin/$1/$2.php [L,END]

# =======================
# Auth routing
# =======================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^auth/([^/]+)/?$ auth/$1.php [L,END]

# =======================
# Teacher routing
# =======================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^teacher/([^/]+)/?$ teacher/$1.php [L,END]
